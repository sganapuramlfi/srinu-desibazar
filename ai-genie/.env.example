# AI Genie Configuration
# Set to 'true' to enable AI features
AI_ENABLED=false  

# AI Provider: 'openai', 'claude', 'gemini', 'deepseek', 'ollama', 'local', 'mock', or 'disabled'
AI_PROVIDER=mock

# Provider API Keys (only needed for respective providers)
OPENAI_API_KEY=your_openai_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Optional: Custom base URLs
AI_BASE_URL=
# Examples:
# OpenAI: https://api.openai.com/v1
# Claude: https://api.anthropic.com/v1
# Gemini: https://generativelanguage.googleapis.com/v1beta
# DeepSeek: https://api.deepseek.com/v1
# Ollama: http://localhost:11434

# Optional: Custom model names
AI_MODEL=
# Examples:
# OpenAI: gpt-4o-mini, gpt-4o, gpt-3.5-turbo
# Claude: claude-3-5-sonnet-20241022, claude-3-5-haiku-20241022
# Gemini: gemini-1.5-flash, gemini-1.5-pro
# DeepSeek: deepseek-chat, deepseek-coder
# Ollama: llama3.2, qwen2.5, codellama

# Individual Feature Toggles
AI_SMART_SEARCH=true
AI_BOOKING_ASSISTANT=true  
AI_BUSINESS_INSIGHTS=true
AI_MESSAGE_AI=false

# Development settings
NODE_ENV=development