{
  "extends": "../tsconfig.json",
  "include": ["**/*", "../modules/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@db/*": ["../db/*"],
      "@modules/*": ["../modules/*"]
    }
  }
}